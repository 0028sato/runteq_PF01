<%= search_form_for @q, url: admin_posts_path do |f| %>
<div class="row">
  <div class="form-inline align-items-center mx-auto">
    <div class="col-auto">
      <%= f.search_field :body_cont, class: 'form-control', placeholder: '検索ワード' %>
    </div>
      <div class="col-auto">
        <%= f.date_field :created_at_gteq, class: 'form-control' %>
        <span>〜</span>
        <%= f.date_field :created_at_lteq_end_of_day, class: 'form-control' %>
      </div>
    <div class="col-auto">
      <%= f.submit value: '検索', class: 'btn btn-primary' %>
    </div> 
  </div>
</div>
<% end %>

<div class="container mb-5 pt-2">
  <h1><%= "投稿一覧ページ" %></h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Post.human_attribute_name(:id) %></th>
          <th scope="col"><%= Post.human_attribute_name(:user) %></th>
          <th scope="col"><%= Post.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @posts %>
    </div>
  </div>
</div>