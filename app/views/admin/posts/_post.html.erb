<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.user.name %>
  </td>
  <td>
    <%= l post.created_at, format: :long %>
  </td>
  <td>
    <%= link_to t('defaults.show'), admin_post_path(post), class: 'btn btn-info' %>
    <%= link_to t('defaults.edit'), edit_admin_post_path(post), class: 'btn btn-success' %>
    <%= link_to t('defaults.delete'), admin_post_path(post), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
  </td>
</tr>