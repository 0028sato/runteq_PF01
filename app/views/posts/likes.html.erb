<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render 'search_form', url: likes_posts_path %>
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @like_posts.present? %>
          <%= render @like_posts %>
        <% else %>
          <p><%= t('likes.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @like_posts %>
    </div>
  </div>
</div>