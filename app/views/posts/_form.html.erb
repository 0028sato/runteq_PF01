<%= form_with model: post, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
   <div class="form-group">
     <%= f.label :budget %>
     <%= f.text_field :budget, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :body %>
     <%= f.text_area :body, class: 'form-control', rows: 10 %>
   </div>

  <%= f.fields_for :snow_boards, @post.snow_boards.new do | d | %>
  <div class="form-group">
    <%= d.label :board_name %>
    <%= d.text_field :board_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= d.label :board_information %>
    <%= d.text_area :board_information, class: 'form-control' %>
  </div>

  <% end %>
  <%= f.fields_for :snow_bindings, @post.snow_bindings.new do | b | %>
  <div class="form-group">
    <%= b.label :binding_name %>
    <%= b.text_field :binding_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= b.label :binding_information %>
    <%= b.text_area :binding_information, class: 'form-control' %>
  </div>
  <% end %>

  <%= f.fields_for :snow_shoes, @post.snow_shoes.new do | b | %>
  <div class="form-group">
    <%= b.label :shoe_name %>
    <%= b.text_field :shoe_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= b.label :shoe_information %>
    <%= b.text_area :shoe_information, class: 'form-control' %>
  </div>
  <% end %>

   <div class="field">
    <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
    <%= f.text_field :name, value: @tag_list, class:"form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :post_image %>
    <%= f.file_field :post_image, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :post_image_cache %>
  </div>

  <div class='mt-3 mb-3'>
    <%= image_tag post.post_image.url,
                  id: "preview",
                  size: '300x200' %>
  </div>

   <%= f.submit class: 'btn btn-primary' %>
 <% end %>