<%= form_with model: post, local: true do |f| %>
   <div class="form-group">
     <%= f.label :budget %>
     <%= f.text_field :budget, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= f.label :body %>
     <%= f.text_area :body, class: 'form-control', rows: 10 %>
   </div>

   <%= f.submit class: 'btn btn-primary' %>
 <% end %>