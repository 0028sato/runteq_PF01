<% content_for(:title, t('.title')) %>
<div class="breadcrumb">
  <% breadcrumb :my_posts %>
  <%= breadcrumbs separator: ">" %>
</div>
<div class="container pt-3">
   <div class="row">
     <div class="col-lg-10 offset-lg-1">
       <!-- 検索フォーム -->
       <%= render 'search_form', url: posts_path %>
     </div>
   </div>
 
   <!-- 掲示板一覧 -->
   <div class="row">
     <div class="col-12">
       <div class="row">
         <% if @my_posts.present? %>
           <%= render @my_posts %>
         <% else %>
           <p><%= t('.no_result') %></p>
         <% end %>
         <%= paginate @my_posts %>
       </div>
     </div>
   </div>
 </div>
 