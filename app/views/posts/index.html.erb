<div class="container pt-3">
   <div class="row">
     <div class="col-lg-10 offset-lg-1">
       <!-- 検索フォーム -->
       <% breadcrumb :home %>
       <%= breadcrumbs separator: ">" %>
      <%= render 'search_form', url: posts_path %>
     </div>
   </div>
 
   <!-- 掲示板一覧 -->

  <div class="row">
    <div class="col-12">
      <div class="row">
         <% if @posts.present? %>
           <%= render @posts %>
         <% else %>
           <p><%= t('.no_result') %></p>
         <% end %>
       </div>
       <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>

 