<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= post.id %>">
    <div class="card">
      <a href="#">
        <%= link_to (image_tag post.post_image_url, class: 'card-img-top', size: '300x200'),post_path(post) %>
      </a>
      <div class="card-body">
        <h4 class="card-title">
            <%= "予算: #{post.budget} 円" %>
        </h4>
        <% if logged_in? %>
          <% if current_user.own?(post) %>
            <%= render 'crud_menus', post: post %>
          <% else %>
            <%= render 'like_button', post: post  %>
          <% end %>
        <% end %>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= icon 'far', 'user' %>
            <%= post.user.name %>
          </li>
          <li class="list-inline-item">
            <%= icon 'far', 'calendar' %>
            <%= l post.created_at, format: :long %>
          </li>
        </ul>
        <p class="card-text"><%= post.body %></p>
        
        <% post.snow_boards.each do |board| %>
        <p class="card-text"><%= "ボードの名前 : #{board.board_name}" %></p>
        <% end %>

        <% post.snow_bindings.each do |binding| %>
        <p class="card-text"><%= "ビィンディングの名前 : #{binding.binding_name}" %></p>
        <% end %>

        <% post.tags.each do |tag| %>
          <span><%= link_to tag.name, tag_posts_path(tag_id: tag.id) %></span>
	      <% end %>
      </div>
    </div>
  </div>
</div>