<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2 login-main">
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <% f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control login-form',placeholder: "email" %>
        </div>
        <div class="form-group">
          <% f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control login-form', placeholder: "PassWord" %>
        </div>
        <div class="actions">
          <%= f.submit (t 'defaults.login'), class: "btn btn-border login-button" %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to (t '.to_register_page'), new_user_path, class: "login-link" %>
        <%= link_to (t '.password_forget'), new_password_reset_path, class: "login-link" %>
        <br><%= link_to (t '.twitter_login'),auth_at_provider_path(provider: :twitter), class:"login-link" %>
      </div>
    </div>
  </div>
</div>
