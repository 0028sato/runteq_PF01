<div class="breadcrumb">
  <% breadcrumb :password_resets %>
  <%= breadcrumbs separator: ">" %>
</div>
<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 password-reset-main">
      <h1><%= t('.title') %></h1>
      <%= form_with url: password_resets_path, local: true do |f| %>
        <div class="form-group">
          <% f.label :email, t(User.human_attribute_name(:email)) %><br />
          <%= f.email_field :email, class: 'form-control password-reset-form',placeholder: "email" %>
        </div>
        <%= f.submit t('password_resets.new.submit'), class: 'btn btn-border password-reset-button' %>
    <% end %>
    </div>
  </div>
</div>
